# syntax=docker/dockerfile:1

# --- Dependencies ---
FROM python:3.8-slim-buster AS base
RUN apt-get update
RUN apt-get install xz-utils
RUN apt-get -y install curl
RUN curl https://nodejs.org/dist/v14.15.4/node-v14.15.4-linux-x64.tar.xz -O
RUN tar -xf node-v14.15.4-linux-x64.tar.xz
RUN ln -s /node-v14.15.4-linux-x64/bin/node /usr/local/bin/node
RUN ln -s /node-v14.15.4-linux-x64/bin/npm /usr/local/bin/npm
WORKDIR /app

# --- Build React Client ---
FROM node:12.18.1-alpine as build-react-client
WORKDIR /build
COPY client/package*.json ./
RUN npm ci
COPY client/ ./
RUN npm run build

# --- Build Flask Server ---
FROM python:3.8-slim-buster as build-flask-server
WORKDIR /build
COPY requirements.txt requirements.txt
RUN pip3 install -r requirements.txt
COPY ./server_flask/ ./

# --- Runtime ---
FROM base AS runtime
ENV NO_UPDATE_NOTIFIER true
COPY --from=build-react-client /build/dist/index.js ./static/
COPY --from=build-react-client /build/static ./static
COPY --from=build-react-client /build/index.html ./templates/client_v2.html
COPY --from=build-flask-server /usr/local/lib/python3.8/site-packages /usr/local/lib/python3.8/site-packages
COPY --from=build-flask-server /build ./
USER nobody
CMD ["python3", "-m", "flask", "run", "--host=0.0.0.0", "--port=9000"]
