{
  "name": "apim-spec",
  "version": "0.0.1",
  "description": "OAS (Swagger v3) API Definition for Electronic Prescription Service API",
  "scripts": {
    "lint": "speccy lint electronic-prescription-service-api.yaml --skip default-and-example-are-redundant --skip openapi-tags-alphabetical",
    "resolve": "speccy resolve -i electronic-prescription-service-api.yaml > dist/electronic-prescription-service-api.resolved.yaml",
    "speccy-lint": "speccy lint build/electronic-prescription-service-api.yaml --skip default-and-example-are-redundant --skip openapi-tags-alphabetical",
    "speccy-resolve": "speccy resolve -i build/electronic-prescription-service-api.yaml > speccy.yaml",
    "swagger-lint": "swagger-cli validate build/electronic-prescription-service-api.yaml",
    "swagger-resolve": "swagger-cli bundle build/electronic-prescription-service-api.yaml --dereference -t yaml -o swagger.yaml",
    "serve": "speccy serve dist/electronic-prescription-service-api.json",
    "check-licenses": "license-checker --failOn GPL --failOn LGPL --start ../.."
  },
  "author": "NHS Digital",
  "license": "MIT",
  "engines": {
    "node": "16.14.x",
    "npm": "8.x"
  },
  "homepage": "https://github.com/NHSDigital/electronic-prescription-service-api",
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "speccy": "^0.11.0"
  }
}
