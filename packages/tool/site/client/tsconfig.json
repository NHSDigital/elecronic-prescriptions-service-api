{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "esModuleInterop": true
  },
  "skipLibCheck": true,
  "include": ["**/*.ts", "**/*.tsx", "**/*.scss"]
  //"exclude": ["node_modules"]
}
