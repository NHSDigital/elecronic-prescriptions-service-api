{
  "name": "electronic-prescription-service-api-coordinator",
  "version": "0.0.1",
  "description": "Electronic Prescription Service API Coordinator",
  "main": "coordinator/src/app.js",
  "scripts": {
    "build": "tsc --build --clean && tsc --alwaysStrict --project tsconfig-build.json",
    "copy-resources": "cp -r ./src/resources/ ./dist/coordinator/src/",
    "lint": "eslint . --ext .ts --max-warnings 0 --fix",
    "start": "node coordinator/src/app.js --use_strict",
    "start-with-env": ". ../../scripts/set_env_vars.sh && node coordinator/src/app.js --use_strict",
    "start-dev": "ts-node-dev --respawn --transpileOnly src/app.ts",
    "test": "jest --reporters=default --reporters=jest-junit",
    "test:debug": "jest -i --reporters=default --reporters=jest-junit",
    "integration-test": "node_modules/.bin/newman run ../tests/e2e/postman/electronic-prescription-coordinator-postman-tests.json -e $API_TEST_ENV_FILE_PATH --reporters html,cli,htmlextra,junit --reporter-htmlextra-logs --reporter-htmlextra-darkTheme",
    "check-licenses": "node_modules/.bin/license-checker --failOn GPL --failOn LGPL",
    "create-examples": "ts-node tests/generate-spine-examples.ts"
  },
  "author": "NHS Digital",
  "license": "MIT",
  "engines": {
    "node": "16.14.x",
    "npm": "8.x"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^20.2.2",
    "axios": "^0.21.1",
    "crypto-js": "^4.1.1",
    "fhirpath": "^3.3.1",
    "hapi-pino": "^11.0.1",
    "license-checker": "^25.0.1",
    "lodash": "^4.17.19",
    "lossless-json": "^2.0.5",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "mustache": "^4.0.1",
    "newman": "^5.2.2",
    "pino": "^7.8.1",
    "uuid": "^8.2.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^10.0.1",
    "@types/crypto-js": "^4.1.1",
    "@types/hapi__hapi": "^20.0.12",
    "@types/jest": "^26.0.5",
    "@types/lossless-json": "^1.0.1",
    "@types/module-alias": "^2.0.0",
    "@types/moxios": "^0.4.15",
    "@types/mustache": "^4.0.1",
    "@types/node": "^16.14.2",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import-newlines": "^1.1.4",
    "jest": "^26.0.1",
    "jest-expect-message": "^1.1.3",
    "jest-junit": "^15.0.0",
    "license-checker": "^25.0.1",
    "minimist": "^1.2.6",
    "moxios": "^0.4.0",
    "prettier": "^2.8.3",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.9.5"
  },
  "_moduleAliases": {
    "@models": "models",
    "@resources": "src/resources",
    "@services": "src/services"
  }
}