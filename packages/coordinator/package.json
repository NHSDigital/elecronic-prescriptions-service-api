{
  "name": "electronic-prescription-service-api-coordinator",
  "version": "0.0.1",
  "description": "Electronic Prescription Service API Coordinator",
  "main": "coordinator/src/app.js",
  "scripts": {
    "build": "tsc --build --clean && tsc --alwaysStrict --project tsconfig-build.json",
    "copy-resources": "cp -r ./src/resources/ ./dist/coordinator/src/",
    "lint": "eslint . --ext .ts --max-warnings 0 --fix",
    "start": "node dist/coordinator/src/app.js --use_strict",
    "start-with-env": ". ../../scripts/set_env_vars.sh && node coordinator/src/app.js --use_strict",
    "start-dev": "ts-node-dev --respawn --transpileOnly src/app.ts",
    "test": "jest --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura --coverageReporters=text --coverageReporters=html",
    "test:debug": "jest -i --reporters=default --reporters=jest-junit",
    "integration-test": "node_modules/.bin/newman run ../tests/e2e/postman/electronic-prescription-coordinator-postman-tests.json -e $API_TEST_ENV_FILE_PATH --reporters html,cli,htmlextra,junit --reporter-htmlextra-logs --reporter-htmlextra-darkTheme",
    "check-licenses": "license-checker --failOn GPL --failOn LGPL --start ../..",
    "create-examples": "ts-node tests/generate-spine-examples.ts"
  },
  "author": "NHS Digital",
  "license": "MIT",
  "engines": {
    "node": "16.14.x",
    "npm": "8.x"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.2",
    "@types/xsd-schema-validator": "^0.5.7",
    "@xmldom/xmldom": "^0.8.10",
    "asn1js": "^3.0.5",
    "axios": "^1.6.2",
    "crypto-js": "^4.2.0",
    "fhirpath": "^3.9.0",
    "hapi-pino": "^12.1.0",
    "joi": "^17.11.0",
    "jsrsasign": "^10.9.0",
    "lossless-json": "^3.0.2",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "mustache": "^4.0.1",
    "newman": "^6.0.0",
    "pino": "^8.16.2",
    "pkijs": "^3.0.15",
    "pvutils": "^1.1.3",
    "uuid": "^9.0.1",
    "xml-c14n": "^0.0.6",
    "xml-js": "^1.6.11",
    "xsd-schema-validator": "^0.7.0"
  },
  "devDependencies": {
    "@hapi/shot": "^6.0.1",
    "@types/crypto-js": "^4.2.1",
    "@types/hapi-pino": "^9.1.3",
    "@types/jsrsasign": "^10.5.12",
    "@types/lossless-json": "^1.0.1",
    "@types/module-alias": "^2.0.4",
    "@types/mustache": "^4.0.1",
    "@types/uuid": "^9.0.7",
    "@types/xml-c14n": "^0.0.3",
    "axios-mock-adapter": "^1.22.0",
    "jest-expect-message": "^1.1.3",
    "ts-node-dev": "^2.0.0"
  },
  "_moduleAliases": {
    "@models": "models",
    "@resources": "src/resources",
    "@services": "src/services"
  }
}
