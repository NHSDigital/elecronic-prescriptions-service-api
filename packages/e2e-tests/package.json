{
  "name": "apim-e2e-tests",
  "version": "0.0.1",
  "description": "E2E Pact tests for Electronic Prescription Service API",
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint . --ext .ts --max-warnings 0 --fix",
    "check-licenses": "node_modules/.bin/license-checker --failOn GPL --failOn LGPL",
    "generate-postman-collection": "ts-node postman-pact.ts --use_strict",
    "clear-cache": "jest --clearCache",
    "create-sandbox-pacts": "jest sandbox",
    "create-live-pacts": "jest live",
    "fetch-apigee-access-token": "ts-node --project tsconfig.json ./auth/src/oauth.ts --use_strict",
    "publish-pacts": "ts-node --project tsconfig.json ./broker/publish.ts --use_strict",
    "verify-pacts": "ts-node --project tsconfig.json ./broker/verify.ts --use_strict",
    "generate-token": "ts-node --project tsconfig.json ./services/get-access-token.ts"
  },
  "author": "NHS Digital",
  "license": "MIT",
  "engines": {
    "node": "16.14.x",
    "npm": "8.x"
  },
  "config": {
    "pact_do_not_track": true
  },
  "devDependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^20.2.2",
    "@pact-foundation/pact": "^10.0.1",
    "@pact-foundation/pact-core": "^13.13.0",
    "@pact-foundation/pact-node": "^10.17.6",
    "@types/crypto-js": "^4.0.1",
    "@types/fhir": "^0.0.35",
    "@types/jest": "24.9.0",
    "@types/jsdom": "^20.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lossless-json": "1.0.0",
    "@types/node": "14.0.13",
    "@types/supertest": "2.0.9",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "axios": "^1.2.0",
    "axios-cookiejar-support": "^4.0.3",
    "crypto-js": "^4.0.0",
    "eslint": "6.8.0",
    "eslint-plugin-import-newlines": "^1.1.4",
    "fhirpath": "^3.3.1",
    "hapi-pino": "^8.3.0",
    "jest": "^26.1.0",
    "jsdom": "^21.1.0",
    "jsonwebtoken": "^9.0.0",
    "license-checker": "^25.0.1",
    "lodash": "^4.17.19",
    "lossless-json": "^2.0.5",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "mustache": "^4.0.1",
    "newman": "^5.2.2",
    "pino": "^7.8.1",
    "query-string": "^7.1.2",
    "tough-cookie": "^4.1.2",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "tsconfig-paths": "^3.11.0",
    "typescript": "3.9.10",
    "uuid": "^8.2.0",
    "xml-js": "^1.6.11"
  }
}
