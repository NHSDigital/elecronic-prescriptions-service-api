{
  "name": "electronic-prescription-service-api-coordinator",
  "version": "0.0.1",
  "description": "Electronic Prescription Service API Coordinator",
  "main": "app.js",
  "scripts": {
    "build": "tsc --alwaysStrict",
    "lint": "eslint . --ext .ts --max-warnings 0 --fix",
    "start": "node app.js --use_strict",
    "start-with-env": ". ../../scripts/set_env_vars.sh && node app.js --use_strict",
    "start-dev": "ts-node-dev --respawn --transpileOnly src/app.ts",
    "test": "jest",
    "integration-test": "node_modules/.bin/newman run ../tests/e2e/postman/electronic-prescription-coordinator-postman-tests.json -e $API_TEST_ENV_FILE_PATH --reporters html,cli,htmlextra,junit --reporter-htmlextra-logs --reporter-htmlextra-darkTheme",
    "check-licenses": "node_modules/.bin/license-checker --failOn GPL --failOn LGPL"
  },
  "author": "NHS Digital",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "18.4.1",
    "@hapi/joi": "^17.1.0",
    "axios": "^0.19.2",
    "crypto-js": "^4.0.0",
    "license-checker": "^25.0.1",
    "lodash": "^4.17.19",
    "moment": "^2.26.0",
    "mustache": "^4.0.1",
    "newman": "^5.1.0",
    "uuid": "^8.2.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "@types/crypto-js": "^3.1.47",
    "@types/hapi__hapi": "^19.0.3",
    "@types/jest": "^26.0.5",
    "@types/moxios": "^0.4.9",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.0.13",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^6.8.0",
    "jest": "^26.0.1",
    "license-checker": "^25.0.1",
    "minimist": "^1.2.2",
    "moxios": "^0.4.0",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.5"
  }
}
