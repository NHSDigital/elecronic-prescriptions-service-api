{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": [
      "es2019"
    ],
    "noImplicitAny": true,
    "composite": true,
    "moduleResolution": "node",
    "sourceMap": true,
    // "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "tests/*"
      ],
      "@models": ["../models", "./models"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "references": [
    { 
      "path": "../models"
    }
  ]
}
