{
  "name": "electronic-prescription-service-api-sandbox",
  "version": "0.0.1",
  "description": "Electronic Prescription Service API Sandbox Server",
  "main": "app.js",
  "scripts": {
    "lint": "find . -type f -name '*.js' ! -name '.eslintrc.js' ! -name '*.spec.js' | grep -v 'node_modules/' | xargs eslint --max-warnings 0",
    "test": "jest && node_modules/.bin/newman run ../tests/e2e/electronic-prescription-service-api-sandbox.json -e $API_TEST_ENV_FILE_PATH --reporters html,cli,htmlextra,junit --reporter-htmlextra-logs --reporter-htmlextra-darkTheme",
    "start": "node app.js --use_strict",
    "check-licenses": "node_modules/.bin/license-checker --failOn GPL --failOn LGPL"
  },
  "author": "NHS Digital",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "18.4.1",
    "@hapi/joi": "^17.1.0",
    "fast-json-patch": "^3.0.0-1",
    "inert": "^5.1.3",
    "lodash": "^4.17.15",
    "nhs-number-validator": "^1.1.1",
    "monet": "0.9.1",
    "newman": "5.1.0"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "eslint": "^6.8.0",
    "jest": "^26.0.1",
    "minimist": "^1.2.2",
    "license-checker": "^25.0.1"
  }
}
