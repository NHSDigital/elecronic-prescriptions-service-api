<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.Errors.UserRole">
    <Set>
        <Payload contentType="application/fhir+json">
            {
                "resourceType": "OperationOutcome",
                "issue": [
                    {
                        "severity": "error",
                        "code": "{validation.statusCode}",
                        "details": {
                            "coding": [
                                {
                                    "system": "https://fhir.nhs.uk/R4/CodeSystem/Spine-ErrorOrWarningCode",
                                    "version": "1",
                                    "code": "INVALID_VALUE",
                                    "display": "Provided value is invalid"
                                }
                            ]
                        },
                        "diagnostics": "{validation.errorDescription}"
                    }
                ]
            }
        </Payload>
        <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
        <AssignTo createNew="false" transport="https" type="request"/>
    </Set>
</AssignMessage>
